@{
    ViewData["Fremmedartslista"] = "Fremmedartslista";
    ViewData["Rødlista"] = "Rødlista";
}

<div class="sidebarmenu">
    <button class="button tertiary" onclick="expandParent(this, 'expand')">Sidemeny </button>

    <ul>
        <li>
            <a class="menuheaderlink redlist" asp-controller="Redlist" asp-action="RodlisteForArter">
                <h3>
                    <span>@ViewData["Rødlista"] for arter</span>
                    <span class="material-icons pad-top">keyboard_arrow_right</span>
                </h3>
            </a>
        </li>
        <li>
            <a asp-controller="Redlist" asp-action="Index2021" asp-route-Area="N">
                <span>@ViewData["Rødlista"] 2021 </span>
                <span class="material-icons">keyboard_arrow_right</span>
            </a>
        </li>

        <li>
            <a href="https://artsdatabanken.no/Rodliste2015/sok">
                <span>@ViewData["Rødlista"] 2015 </span>
                <span class="material-icons">keyboard_arrow_right</span>
            </a>
        </li>

        <li>
            <a href="http://www.artsportalen.artsdatabanken.no/">
                <span>@ViewData["Rødlista"] 2010 </span>
                <span class="material-icons">keyboard_arrow_right</span>
            </a>
        </li>

        <li>
            <a href="https://www.artsdatabanken.no/Pages/201632/Norsk_roedliste_2006">
                <span>@ViewData["Rødlista"] 2006 </span>
                <span class="material-icons">keyboard_arrow_right</span>
            </a>
        </li>
    </ul>
    <ul>
        <li>
            <a class="menuheaderlink redlist" asp-controller="Redlist" asp-action="RodlisteForArter">
                <h3>
                    <span>@ViewData["Rødlista"] for naturtyper</span>
                </h3>
            </a>
        </li>

        <li>
            <a href="https://artsdatabanken.no/rodlistefornaturtyper">
                <span>@ViewData["Rødlista"] 2018 </span>
                <span class="material-icons">keyboard_arrow_right</span>
            </a>
        </li>
    </ul>

    <ul>
        <li>
            <a class="menuheaderlink alien-species" asp-controller="AlienSpecies" asp-action="Home">
                <h3>
                    <span>Fremmedarter</span>
                </h3>
            </a>
        </li>

        <li>
            <a asp-controller="AlienSpecies" asp-action="Index">
                <span>@ViewData["Fremmedartslista"] 2023</span>
                <span class="material-icons">keyboard_arrow_right</span>
            </a>
        </li>

        <li>
            <a href="https://artsdatabanken.no/fremmedartslista2018">
                <span>@ViewData["Fremmedartslista"] 2018 </span>
                <span class="material-icons">keyboard_arrow_right</span>
            </a>
        </li>

    </ul>
</div>
