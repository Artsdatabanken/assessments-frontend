@model SpeciesAssessment2021
@*
    // Information about the assesment

    MOST OF THESE FIELDS ARE MISSING MAPPING.
    AWAIT TRANSFORMATION
*@

@{
    SpeciesAssessment2021 assessment = Model;
}

<div class="page_section">
    <!-- FULL VURDERING/LC -->
    @if (@Model.RedlistAssessmentClassification == "sikkerBestandLC")
    {
        <span>@Html.Raw(@ViewBag.glossary["oneliners"]["vurdert_livskraftig"])</span>
    }

    @if (@Model.RedlistAssessmentClassification == "rodlisteVurdertArt")
    {
        <span>@ViewBag.glossary["oneliners"]["full_vurdering"]</span>
    }

    <!-- Finnes i norge? -->

    @if (!string.IsNullOrEmpty(Model.RationaleRE))
    {
        <p>
            @if (@assessment.RationaleRE == "etablertBestandINorge")
            {
                <span>
                    @ViewBag.glossary["oneliners"]["litentvil"]
                    @(assessment.AssessmentArea == "N" ? "Norge " : "Svalbard ") (RE).
                    @Html.Raw(@ViewBag.glossary["oneliners"]["etablertBestandINorge"])
                </span>
            }
            else @if (@assessment.RationaleRE == "ikkeReproduserendeINorge")
            {
                <span>
                    @ViewBag.glossary["oneliners"]["litentvil"]
                    @(assessment.AssessmentArea == "N" ? "Norge " : "Svalbard ") (RE).
                    @Html.Raw(@ViewBag.glossary["oneliners"]["ikkeReproduserendeINorge"])

                </span>
            }
            else @if (@assessment.RationaleRE == "etablertFør1800")
            {
            <span>
                @ViewBag.glossary["oneliners"]["litentvil"]
                @(assessment.AssessmentArea == "N" ? "Norge " : "Svalbard ") (RE).
                @Html.Raw(@ViewBag.glossary["oneliners"]["etablertFør1800"])
            </span>
            }
        </p>
    }

    <p>
    <!-- Begrenset forekomst -->
    @if (!string.IsNullOrEmpty(Model.RationaleNotApplicable))
    {
        @if (@assessment.RationaleNotApplicable == "ikkeReproduserendeGjestNA")
        {
            <span> @Html.Raw(@ViewBag.glossary["oneliners"]["ikkeReproduserendeGjestNA"])</span>
        }
        else @if (@assessment.RationaleNotApplicable == "observertReproduserendeIkkeEtablertNA")
        {
        <span> @Html.Raw(@ViewBag.glossary["oneliners"]["observertReproduserendeIkkeEtablertNA"])</span>
        }
        else @if (@assessment.RationaleNotApplicable == "observertReproduktivIkkeEtablertNA")
        {
        <span> @Html.Raw(@ViewBag.glossary["oneliners"]["observertReproduktivIkkeEtablertNA"])</span>
        }
        else @if (@assessment.RationaleNotApplicable == "uregelmessigGjestIkkeReproduserendeNA")
        {
        <span> @Html.Raw(@ViewBag.glossary["oneliners"]["uregelmessigGjestIkkeReproduserendeNA"])</span>
        }
        else @if (@assessment.RationaleNotApplicable == "ikkeDokumentertForekomstNA")
        {
        <span> @Html.Raw(@ViewBag.glossary["oneliners"]["ikkeDokumentertForekomstNA"])</span>
        }
        else @if (@assessment.RationaleNotApplicable == "hybridartUtenReproduksjonNA")
        {
        <span> @Html.Raw(@ViewBag.glossary["oneliners"]["hybridartUtenReproduksjonNA"])</span>
        }
        else @if (@assessment.RationaleNotApplicable == "hybridartUvisstOmReproduserendeNA")
        {
        <span> @Html.Raw(@ViewBag.glossary["oneliners"]["hybridartUvisstOmReproduserendeNA"])</span>
        }
        else @if (@assessment.RationaleNotApplicable == "forekommerBareIHybridkombinasjonNA")
        {
        <span> @Html.Raw(@ViewBag.glossary["oneliners"]["forekommerBareIHybridkombinasjonNA"])</span>
        }
    }

    <!-- KUNNSKAPSSTATUS -->
    @if (!string.IsNullOrEmpty(Model.RationaleNotEvaluated))
    {
        @if (@assessment.RationaleNotEvaluated == "mangelfullKunnskapNE")
        {
            <span> @Html.Raw(@ViewBag.glossary["oneliners"]["mangelfullKunnskapNE"])</span>
        }
        else @if (@assessment.RationaleNotEvaluated == "uavklartSystematikkNE")
        {
        <span> @Html.Raw(@ViewBag.glossary["oneliners"]["uavklartSystematikkNE"])</span>
        }
        else@if (@assessment.RationaleNotEvaluated == "uklartOmReproduserendeBestandNE")
        {
        <span> @Html.Raw(@ViewBag.glossary["oneliners"]["uklartOmReproduserendeBestandNE"])</span>
        }
        else@if (@assessment.RationaleNotEvaluated == "artsgruppeIkkeRisikovurdertNE")
        {
        <span> @Html.Raw(@ViewBag.glossary["oneliners"]["artsgruppeIkkeRisikovurdertNE"])</span>
        }
        else@if (@assessment.RationaleNotEvaluated == "annetNE")
        {
        <span> @Html.Raw(@ViewBag.glossary["oneliners"]["annetNE"])</span>
        }
    }
  
    <!-- FREMMEDART -->
    @if (@assessment.RedlistAssessmentClassification == "fremmedArtNA")
    {
        <span>
            @Html.Raw(@ViewBag.glossary["oneliners"]["fremmedArtNA"])
        </span>
    }

    @if (!string.IsNullOrEmpty(Model.EvaluationJustification))
    {
        @if (assessment.EvaluationJustification == "etablertBestandINorge")
        {
            <span>@Html.Raw(@ViewBag.glossary["oneliners"]["etablertBestandINorge"])</span>
        }
        else@if (assessment.EvaluationJustification == "ikkeReproduserendeINorge")
        {
            <span>@Html.Raw(@ViewBag.glossary["oneliners"]["ikkeReproduserendeINorge"])</span>
        }
        else@if (assessment.EvaluationJustification == "etablertFør1800")
        {
            <span>@Html.Raw(@ViewBag.glossary["oneliners"]["etablertFør1800"])</span>
        }
    }
</p>

</div><!-- End section -->


