    <li class="category_rl "><div class="category_item">NT <span>Nær<br/>truet</span></div></li>
    <li class="category_rl stop_line"><div class="category_item">DD <span>Data- mangel</span></div></li>
    <li><div class="category_item">LC <span>Livs- kraftig</span></div></li>
