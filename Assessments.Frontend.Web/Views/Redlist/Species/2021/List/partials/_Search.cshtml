@model RL2021ViewModel

<div class="list-search">
    <label for="Name"><b>Søk i Rødlista 2021</b></label>
    <div class="searchfield">
        <div class="searchfield_and_button">
            <input asp-for="Name" autocomplete="off" placeholder="Søk i Rødlista 2021" />
            <button class="primary" type="submit">
                <span class="material-icons">
                    search
                </span>
                Søk
            </button>
        </div>
        <ul id="autocomplete_list_ul" class="search_dropdown"></ul>
    </div>
    <small>F.eks. 'Pinus (slekt)' for alle arter i slekta Pinus.</small>
</div>