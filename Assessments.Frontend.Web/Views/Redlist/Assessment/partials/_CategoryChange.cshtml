@model SpeciesAssessment2021

<div class="page_section">

    <!-- Kategori endring -->


    @if (Model.ExtinctionRiskAffected == "Ja")
    {


        <h3>Nedgradering av kategori på grunn av påvirkning utenfra</h3>
        <p>
            @Model.RationaleCategoryAdjustment
        </p>

    }


    @if (string.IsNullOrEmpty(Model.ImportInfo.Kategori2015))
    {

        // example species include:
        // - endret kategori: 32041
        // - nedgradert kategori: 31847

        string previous_category = "-";

        if(!string.IsNullOrEmpty(Model.ImportInfo.Kategori2015)){
            previous_category = previous_category.Substring(0,2);
         }
        string current_category = Model.Category.Substring(0,2);

        //UTEN GRADER MATCH



        @if (previous_category != current_category)
        {
            <h3>Årsak til endring av kategori</h3>
            <p>
                Kategorien for denne arten har endret seg fra @previous_category til @current_category siden Rødlista 2015.
                Endringen kommer på grunnlag av: @Model.ReasonCategoryChange

            </p>

        }
    }





</div>