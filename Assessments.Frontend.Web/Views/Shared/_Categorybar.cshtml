<!-- Add  category-selected to active tab -->
@model Artsdatabanken.RL2021
@{
    ViewBag.category = @Model.Kategori;
}


@functions {
    public string setActive(string first, string second)
    {
        if (first == second)
        {
            return "active";
        }
        else
        {
            return "notactive";
        }
    }
}

<partial name="/Views/Shared/_CategoryDescription.cshtml" />

<div class="section">
    <h2>Categorybar</h2>
    <h3>Rødlistekategori: @ViewBag.category</h3>

    <ul class="category_displayer">
        <li class="category_rl start_line">
            <div class="category_item  @setActive("RE", @ViewBag.category)">
                RE <span>Regionalt utdødd</span>
            </div>
            <div class="topbar_label">Rødlistet</div>
        </li>
        <li class="category_rl category_threatened start_line">
            <div class="category_item  @setActive("CR", @ViewBag.category)">
                CR <span>Kritisk truet</span>
            </div>
            <div class="bottombar_label">Truet</div>
        </li>
        <li class="category_rl category_threatened">
            <div class="category_item  @setActive("EN", @ViewBag.category)">
                EN <span>Sterkt truet</span>
            </div>
        </li>
        <li class="category_rl category_threatened stop_line">
            <div class="category_item  @setActive("VU", @ViewBag.category)">
                VU <span>Sårbar</span>
            </div>
        </li>
        <li class="category_rl ">
            <div class="category_item  @setActive("NT", @ViewBag.category)">
                NT <span>Nær<br />truet</span>
            </div>
        </li>
        <li class="category_rl stop_line">
            <div class="category_item  @setActive("DD", @ViewBag.category)">
                DD <span>Data- mangel</span>
            </div>
        </li>
        <li>
            <div class="category_item  @setActive("LC", @ViewBag.category)">
                LC <span>Livs- kraftig</span>
            </div>
        </li>
        <li>
            <div class="category_item  @setActive("NE", @ViewBag.category)">
                NE <span>Ikke vurdert</span>
            </div>
        </li>
    </ul>
</div>