@model AttachmentViewModel;

<h2 id="@Constants.HeadingsIds.Attachments">@Constants.HeadingsNo.Attachments</h2>
<table class="numbers-table">
    <tr>
        <td><b>Filnavn</b></td>
        <td><b>Beskrivelse</b></td>
        <td><b>Lenke for nedlasting</b></td>
    </tr>
    @foreach (var attachment in Model.Attachments)
    {
        <tr>
            <td>@attachment.FileName</td>
            <td>@attachment.Description</td>
            <td>
                <a asp-controller="AlienSpecies"  asp-action="Attachment"  asp-route-attachmentId="@attachment.Id"  asp-route-name="@attachment.FileName" target="_blank">
                    Last ned
                </a>
            </td>
        </tr>
    }
</table>
