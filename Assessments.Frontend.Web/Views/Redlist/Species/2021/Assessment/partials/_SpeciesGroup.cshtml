@model SpeciesAssessment2021
@{

    Dictionary<string, Dictionary<string, string>> speciesgroup = ViewBag.speciesgroup.ToObject<Dictionary<string, Dictionary<string, string>>>();

    // Expert committee field should always be present.
    // By the time we arrive here, the actual committe name has been split into correct species group,
    // and is thus now species group and not actually committtee group.


}

<div class="speciesgroup_container">
    <div class="species_group_image">
        @foreach (var key in speciesgroup.Keys)
        {

            @if (key != null && (@Model.SpeciesGroup == key || @Model.SpeciesGroup.Contains(key)))
            {
                <div class="image_background">

                    @if (speciesgroup[key]["image"] != null)
                    {
                        <img src="@speciesgroup[key]["image"]" alt="@key"/>
                    }
                </div>
            }
        }
    </div>
    <p >
        Vurdert av <a href="https://www.artsdatabanken.no/rodlisteforarter2021/ekspertkomiteene" class="lowercase">ekspertkomité for @Model.ExpertCommittee </a> <br />
        <span class="date">Publisert: @(Model.AssessmentYear == 2010  ? @Model.YearPreviousAssessment : Model.RevisionDate.Date.ToShortDateString())</span>
    </p>
</div>
