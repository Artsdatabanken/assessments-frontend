@model Assessments.Frontend.Web.Models.RL2006ViewModel
@using X.PagedList.Mvc.Core;
@using X.PagedList.Web.Common
@using Assessments.Frontend.Web.Infrastructure
@{
    ViewBag.Title = "2006";
}
<div class="breadcrumbs">
    <ul>
        <li class="lead in-breadcrumb">
            <a href="/">
                Rødlista
            </a>
        </li>
        <span class="breadcrumbdivider">&gt; </span>
        <li class="in-breadcrumb currentcrumb">
            2006
        </li>
    </ul>
</div>

<div class="sidebarmenu"></div>

<div class="content-placer">
    <div class="page-header">
        <h1>
            Norsk Rødliste for arter 2006
        </h1>
        <h2>
            @ViewBag.Title
        </h2>
    </div>
    <div class="mid">

        <h3>
            @Model.Redlist2006Results.Count redlist 2006 items
        </h3>

        <!-- Filter from -->
        <form asp-action="Index2006" method="get">
            <label asp-for="Name"></label><input asp-for="Name" />
        </form>

        <!-- Data form model -->
        <table>
            <thead>
                <tr>
                    <td>ArtsID</td>
                    <td>LatinskArtsnavn</td>
                    <td>Kategori</td>
                </tr>
            </thead>
            @foreach (var item in Model.Redlist2006Results)
            {
                <tr>
                    <td>
                        <a asp-action="Detail" asp-route-id="@item.ArtsID" asp-route-year="2006">
                            @item.ArtsID
                        </a>
                    </td>
                    <td>@item.LatinskArtsnavn</td>
                    <td>@item.Kategori</td>
                </tr>
            }
        </table>
    </div>

    <!-- Pageinator -->
    @Html.PagedListPager(Model.Redlist2006Results, page => Url.Action("Index2006", Context.GetQueryParameters(new Dictionary<string, string> { { "Page", page.ToString() } })), new PagedListRenderOptions
        {
            PageClasses = new[] { "page-link" },
            UlElementClasses = new[] { "pagination" },
            LiElementClasses = new[] { "page-item" }
        })
</div>