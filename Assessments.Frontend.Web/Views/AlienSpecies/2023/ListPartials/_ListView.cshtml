@model AlienSpeciesListViewModel

@{
    Filter.FilterItem[] speciesGroups = SpeciesGroups.AlienSpecies2023SpeciesGroups.Filters;
}

<ul class="redlist" id="redlist">
    <li class="listheader" id="listheader">
        <span></span>
        <span class="list_cell">Artsnavn</span>
        <span class="list_cell">Popul√¶rnavn</span>
        <span class="list_cell">Kategori</span>
    </li>

    @if (Model.Results.Count > 0)
    {
        @foreach (var item in Model.Results)
        {
             var speciesItem = AlienSpeciesHelpers.GetSpeciesGroup(speciesGroups, item.SpeciesGroup); 
            <li class="list @item.SpeciesGroup.ToLower() @item.EvaluationContext">
                <a asp-action="Detail" asp-route-id="@item.Id">
                    <div class="svalbarcontainer">
                        <span class="svalbard">Svalbard</span>
                    </div>

                    <div class="element_icon list_cell">
                        @if (!string.IsNullOrEmpty(item.SpeciesGroup))
                        {
                            <img src="@speciesItem.ImageUrl" alt="@item.SpeciesGroup" />
                            <span class="speciesgroup_name">@item.SpeciesGroup</span>
                        }
                    </div>


                    <span class="element_species">
                        <span class="element_scientific_name list_cell">@Html.Raw(item.ScientificName.ScientificNameFormatted)</span>
                        <span class="element_popular_name list_cell">@item.VernacularName</span>
                    </span>

                    <span class="list_cell categoryname capitalized">
                        @item.Category.DisplayName()
                    </span>

                    <span class="list_cell categorytag">
                        <span class="@item.Category category_tag">
                            <span class="category_tag_label">@item.Category</span>
                        </span>
                    </span>

                </a>
            </li>
        }
    }
    else
    {
        <li class="no_results mobile_padding">@Constants.AlienSpecies2023NoListViewResults</li>
    }
</ul>

<div class="mobile_padding">
    <partial name="/Views/AlienSpecies/2023/ListPartials/_Paginator.cshtml" />
</div>