@model SpeciesAssessment2021
@*
    // Information about the Assessment

    MOST OF THESE FIELDS ARE MISSING MAPPING.
    AWAIT TRANSFORMATION
*@

@{
    SpeciesAssessment2021 assessment = Model;
}

@*
    Ikke relevant for LC-arter // @Model.AssessmentInitialClassification == "sikkerBestandLC"
    Ikke relevant for rødlistede arter // @Model.AssessmentInitialClassification == "rodlisteVurdertArt"

    Nå er forøvrig disse gitt av kategori, men det får så være...
*@



<div class="page_section" style="color:red">
    <h2 style="color:red"> Informasjon </h2>

    @if (@Model.AssessmentInitialClassification != "sikkerBestandLC" && @Model.AssessmentInitialClassification != "rodlisteVurdertArt")
    {
       
         @if (!string.IsNullOrEmpty(Model.EvaluationJustification))
            {
            <h3>Hvorfor er denne arten med i vurderingsgrunnlaget?</h3>
                <p class="EvaluationJustification">
                @if (assessment.EvaluationJustification == "etablertBestandINorge")
                {
                    <span>@Html.Raw(@ViewBag.glossary["oneliners"]["etablertBestandINorge"])</span>
                }
                else if (assessment.EvaluationJustification == "ikkeReproduserendeINorge")
                {
                    <span>@Html.Raw(@ViewBag.glossary["oneliners"]["ikkeReproduserendeINorge"])</span>
                }
                else if (assessment.EvaluationJustification == "etablertFør1800")
                {
                    <span>@Html.Raw(@ViewBag.glossary["oneliners"]["etablertFør1800"])</span>
                }
                </p>
            }

            <h3>Denne arten har ikke vært gjennom full rødlistevurdering, på grunn av</h3>

            <!-- Begrenset forekomst -->
            @if (!string.IsNullOrEmpty(Model.RationaleNotApplicable))
            {
            <h4>Begrenset forekomst</h4>
            <p class="RationaleNotApplicable">
                @if (@Model.RationaleNotApplicable == "ikkeReproduserendeGjestNA")
                {
                    <span> @Html.Raw(@ViewBag.glossary["oneliners"]["ikkeReproduserendeGjestNA"])</span>
                }
                else if (@Model.RationaleNotApplicable == "observertReproduserendeIkkeEtablertNA")
                {
                    <span> @Html.Raw(@ViewBag.glossary["oneliners"]["observertReproduserendeIkkeEtablertNA"])</span>
                }
                else if (@Model.RationaleNotApplicable == "observertReproduktivIkkeEtablertNA")
                {
                    <span> @Html.Raw(@ViewBag.glossary["oneliners"]["observertReproduktivIkkeEtablertNA"])</span>
                }
                else if (@Model.RationaleNotApplicable == "uregelmessigGjestIkkeReproduserendeNA")
                {
                    <span> @Html.Raw(@ViewBag.glossary["oneliners"]["uregelmessigGjestIkkeReproduserendeNA"])</span>
                }
                else if (@Model.RationaleNotApplicable == "ikkeDokumentertForekomstNA")
                {
                    <span> @Html.Raw(@ViewBag.glossary["oneliners"]["ikkeDokumentertForekomstNA"])</span>
                }
                else if (@Model.RationaleNotApplicable == "hybridartUtenReproduksjonNA")
                {
                    <span> @Html.Raw(@ViewBag.glossary["oneliners"]["hybridartUtenReproduksjonNA"])</span>
                }
                else if (@Model.RationaleNotApplicable == "hybridartUvisstOmReproduserendeNA")
                {
                    <span> @Html.Raw(@ViewBag.glossary["oneliners"]["hybridartUvisstOmReproduserendeNA"])</span>
                }
                else if (@Model.RationaleNotApplicable == "forekommerBareIHybridkombinasjonNA")
                {
                    <span> @Html.Raw(@ViewBag.glossary["oneliners"]["forekommerBareIHybridkombinasjonNA"])</span>
                }
            </p>
            }

            <!-- KUNNSKAPSSTATUS -->
            @if (!string.IsNullOrEmpty(Model.RationaleNotEvaluated))
            {
            <h4>Kunsskapsstatus</h4>
            <p class="RationaleNotEvaluated">
                @if (@Model.RationaleNotEvaluated == "mangelfullKunnskapNE")
                {
                    <span> @Html.Raw(@ViewBag.glossary["oneliners"]["mangelfullKunnskapNE"])</span>
                }
                else if (@Model.RationaleNotEvaluated == "uavklartSystematikkNE")
                {
                    <span> @Html.Raw(@ViewBag.glossary["oneliners"]["uavklartSystematikkNE"])</span>
                }
                else if (@Model.RationaleNotEvaluated == "uklartOmReproduserendeBestandNE")
                {
                    <span> @Html.Raw(@ViewBag.glossary["oneliners"]["uklartOmReproduserendeBestandNE"])</span>
                }
                else if (@Model.RationaleNotEvaluated == "artsgruppeIkkeRisikovurdertNE")
                {
                    <span> @Html.Raw(@ViewBag.glossary["oneliners"]["artsgruppeIkkeRisikovurdertNE"])</span>
                }
                else if (@Model.RationaleNotEvaluated == "annetNE")
                {
                    <span> @Html.Raw(@ViewBag.glossary["oneliners"]["annetNE"])</span>
                }
            </p>
            }

            <!-- FREMMEDART -->
            @if (@Model.AssessmentInitialClassification == "fremmedArtNA")
            {
                <h4>Fremmedart</h4>
                <p class="FA">
                    @Html.Raw(@ViewBag.glossary["oneliners"]["fremmedArtNA"])
                </p>
            }


    }

</div><!-- End section -->
