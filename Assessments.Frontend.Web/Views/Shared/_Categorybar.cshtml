<!-- Add  category-selected to active tab -->
@model SpeciesAssessment2021
@*
    Category-displayer, purely visual css-element. 
    Needs the corresponding css to be viewed properly.
    CSS is in the file categorybar.css.
    Re-made completely for launch 2021.

    TODO: Mobile-friendly version.
*@

@functions {
    public string setActive(string first, string second)
    {
        if (second.Contains(first))
        {
            return "active";
        }
        else
        {
            return "notactive";
        }
    }
}

<div class="page_section">

    <ul class="category_displayer">
        <li class="@setActive("RE", @Model.Category)">
            <div class="category_item  RE ">
                <span>RE</span>
            </div>
            <span class="tag">Regionalt utdødd</span>
        </li>
