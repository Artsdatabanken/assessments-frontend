@model SpeciesAssessment2021
@* 
   Breacrumb - specific for inner layer of Assessment *@


<div class="breadcrumbs">
    <ul>
        <li class="lead in-breadcrumb">
            <a asp-controller="Redlist" asp-action="Index2021">Rødlista for arter</a>
        </li>
        <span class="breadcrumbdivider">&gt; </span>
        <li class="in-breadcrumb">
            <a asp-controller="Redlist" asp-action="Index2021">2021</a>
        </li>
        <span class="breadcrumbdivider">&gt; </span>
        @if (@Model.AssessmentArea == "N")
        {
            <li class="in-breadcrumb">
                <a asp-controller="Redlist" asp-action="Index2021" asp-route-Area="N">
                    Norge
                </a>
            </li>
        }
        @if (@Model.AssessmentArea == "S")
        {
            <li class="in-breadcrumb">
                <a asp-controller="Redlist" asp-action="Index2021" asp-route-Area="S">
                    Svalbard
                </a>
            </li>
        }
        <span class="breadcrumbdivider">&gt; </span>
        <li class="in-breadcrumb currentcrumb">
            @Model.ScientificName
        </li>
    </ul>
</div>
