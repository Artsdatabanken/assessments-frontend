@model Artsdatabanken.RL2021
@*
    // Information about the assesment

*@
@{
    string distribution = "Arten har ingen utberedelse";

    @if (@Model.VurderingsContext == "N")
    {
        distribution = @ViewBag.glossary["vurdert_N"]["description"];
    }
    else@if(@Model.VurderingsContext == "S")
    {
        @if (@Model.Ekspertgruppe == "Pattedyr (Svalbard)")
        {
            distribution = @ViewBag.glossary["vurdert_S_pattedyr"]["description"];
        }
        else
        {
            distribution = @ViewBag.glossary["vurdert_S"]["description"];
        }
    }      
}

<div class="page_section">
    <h2>Vurderingsområde og artens utbredelse</h2>
    <p>
        <!-- GEOGRAFI -->
        @distribution
        </p>


        @if (Model.Fylkesforekomster != null)
        {
            @Html.Partial("/Views/Test/partials_2021/_Fylkesforekomster_visning.cshtml", Model.Fylkesforekomster)
        }



    </div><!-- End section -->