<header class="header">
    <div class="width-adjuster">
        <a href="https://artsdatabanken.no" class="header-logo">
            <img alt="Artsdatabanken" src="https://design.artsdatabanken.no/icons/adb-logo/Artsdatabanken_Logo-CMYK-H-Colour@2x.png">
        </a>
        <button id="navbar-mobile" class='material-icons'>menu</button>
        
        <div id="theme_elements">
            <button id="themeselectorbutton" class="themeselector menuitems" onclick="expandThemeButtons()">
                <span class="hideonmobile">Tema </span>
                <span class="material-icons only_mobile">contrast </span>
                <span class="material-icons hideonmobile">expand_more</span>
            </button>
            <div id="themeselectordropdown" class="themeselectordropdown dropdown">
                <ul>
                    <li>
                        <button id="highcontrastbutton" class="themebutton" onclick="highContrastMode(this, 'highcontrast')">
                            <span class="label">
                                <span class="material-icons">
                                    contrast
                                </span>
                                Høykontrast
                            </span>
                            <span class="material-icons toggle">
                                toggle_off
                            </span>
                        </button>
                    </li>
                    <li>
                        <button id="darkmodebutton" class="themebutton" onclick="highContrastMode(this, 'darktheme')">
                            <span class="label">
                                <span class="material-icons">
                                    dark_mode
                                </span>
                                Nattmodus
                            </span>
                            <span class="material-icons toggle">
                                toggle_off
                            </span>
                        </button>
                    </li>
                </ul>
            </div>
        </div>
        <nav id="headermenu" class="hide">
        </nav>
    </div>
</header>