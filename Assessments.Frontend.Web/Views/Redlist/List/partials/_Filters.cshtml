                                                </li>
                                            }
                                        </ul>
                                    </div>
                                </li>

                                <li class="filter_group">
                                    <input class="collapse_checkbox" id="show_category" @CategoryCheck("IsCheck", Model.IsCheck, "Category") type="checkbox" />
