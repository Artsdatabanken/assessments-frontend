<body>
    <div id="bodywrap">
        <partial name="/Views/Shared/_PageTopBar.cshtml" />
        <partial name="/Views/Redlist/Species/2021/_RedlistHeader.cshtml" />
        <div class="main">
            <div class="main-content width-adjuster">
                @RenderBody()
                <script src="~/js/site.js"></script>
                <script src="~/js/filter.js" async></script>
                <script src="~/js/search.js" async></script>
                <script src="~/js/toggleSwitch.js" async></script>
                <script src="~/js/toggleStatView.js" async></script>
                <script src="~/js/accordions.js" async></script>
                <script src="~/js/assessmentTabs.js" async></script>
                <script src="~/js/themes.js" async></script>   
                <script src="https://design.artsdatabanken.no/script/compiled-js/footer.js" async></script>
                <script src="https://design.artsdatabanken.no/script/compiled-js/header.js" async></script>
                <script src="~/js/speciesImages.js" async></script>
                @await RenderSectionAsync("Scripts", required: false)
            </div>
        </div>
        <partial name="/Views/Shared/_PageFooter.cshtml" />
    </div>
</body>
</html>
