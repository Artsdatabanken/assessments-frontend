@model SpeciesAssessment2021
@*
    Habitat was re-made completely for launch 2021.
    Existing inline text is re-used from innsynet 2021, which
    has been moved to the json resource file for this partial.

    TODO: Mobile-friendly version.
*@

@{
//model IEnumerable<string>
Dictionary<string, Dictionary<string, string>> habitat = ViewBag.habitat.ToObject<Dictionary<string, Dictionary<string, string>>>();
}

<div class="habitat page_section">
    @if (@Model.MainHabitat.Count() != 0)
    {
    <h2>@ViewBag.glossary["habitat"]["tagline"]</h2>
        <div>
            @Html.Raw(@ViewBag.glossary["habitat"]["description"])
            <h3>Arten finnes i disse habitatene</h3>
            <div class="habitat_container">
                @foreach (var modelelement in @Model.MainHabitat)
                {
                    // THIS CODE BELOW IS DUPLICATED IN THE PARAGRAPH BELOW IT.
                    // SHOULD BE ITS OWN PARTIAL OR FUNCTION.
                    <div class="habitat_element">
                        <div class="habitat_icon">
                            @if (@ViewBag.habitat[modelelement]["image"] != null)
                            {
                                <img src=@ViewBag.habitat[modelelement]["image"] />
                            }
                        </div>
                        @if (@ViewBag.habitat[modelelement]["shortname"] != null)
                        {
                            <b>@ViewBag.habitat[modelelement]["shortname"]</b>
                        }
                        @if (@ViewBag.habitat[modelelement]["description"] != null)
                        {
                            <p>
                                @Html.Raw(@ViewBag.habitat[modelelement]["description"])

                            </p>

                            <p class="expand_hide">
                                @Html.Raw(@ViewBag.habitat[modelelement]["mapping"])
                            </p>

                            <button class="tertiary tinybutton" onclick="expand(this)">
                                <span class="more">Se NiN-koder</span>
                                <span class="less">Skjul NiN-koder</span>
                            </button>
                        }
                    </div>
                }
            </div>
        </div>
        <div class="other_habitats">
            <span class="hidden">
                <h3>Resterende habitatinndelinger</h3><br />
                <div class="habitat_container">

                    @foreach (var key in habitat.Keys)
                    {
                        @if (!@Model.MainHabitat.Contains(key))
                        {
                    <div class="habitat_element @Html.Raw(@Model.MainHabitat.Contains(key) ? "active" : "inactive")">

                        <div class="habitat_icon">
                            @if (@habitat[key]["image"] != null)
                            {
                                <img src=@habitat[key]["image"] />
                            }
                        </div>

                        @if (@habitat[key]["shortname"] != null)
                        {
                            <b>@habitat[key]["shortname"]</b>
                        }

                        @if (@habitat[key]["description"] != null)
                        {
                            <p>
                                @Html.Raw(@habitat[key]["description"])

                            </p>

                            <p class="expand_hide">
                                @Html.Raw(@habitat[key]["mapping"])
                            </p>
                            <button class="tertiary tinybutton" onclick="expand(this)">
                                <span class="more">Se NiN-koder</span>
                                <span class="less">Skjul NiN-koder</span>
                            </button>
                        }

                    </div>
                        }
                    }

                </div>
            </span>
            <button class="seemore" onclick="expand(this)">
                <span class="more">Se alle habitatinndelinger i Rødlista 2021</span>
                <span class="less">Se kun habitat arten forekommer i</span>
            </button>
        </div>
    }

    <script>
        // See more text by altering css of the clicked element's top parent node
        var seemorebuttons = document.getElementsByClassName('seemore');

        function expand(element) {
            if (element.parentElement.classList.contains("expanded")) {
                element.parentElement.classList.remove("expanded");
            } else {
                element.parentElement.classList.add("expanded");
            }
        }



    </script>
</div>