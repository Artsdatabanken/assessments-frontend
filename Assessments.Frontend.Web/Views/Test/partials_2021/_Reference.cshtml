<div class="section">
    <h3 class="panel-title" style="color: #4c4a48" id="references">
        Referanser
    </h3>
    @if (Model != null && Model.Count() > 0)
    {
        <div class="panel panel-default">
            <div class="panel-heading">

            </div>
            <div id="references">
                @*class="panel-collapse collapse">*@
                <ul class="panel-body list-unstyled" style="margin-bottom: 0">
                    @if (Model.Count() > 0)
                    {
                        <li>
                            @* <h4>Publikasjoner</h4>*@
                            <ul class="list-unstyled">
                                @foreach (var pub in Model)
                                {
                                    <li style="word-break: break-word; margin-bottom: 5px;">@pub.FormattedReference</li>
                                }
                            </ul>
                        </li>
                    }
                </ul>
            </div>
        </div>
    }
</div>